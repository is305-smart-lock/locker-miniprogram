<!-- pages/record/detail.wxml -->
<view class="container">
  <van-cell-group>
    <van-cell title="寝室楼" value="{{ data.name }}" />
    <van-cell title="开门时间" value="{{ data.time }}" />
  </van-cell-group>
  <map id="map" longitude="{{ data.longitude }}" latitude="{{ data.latitude }}" scale="15" markers="{{markers}}" show-location style="width: 100%; height: 300px;"></map>
</view>